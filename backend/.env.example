# Backend Environment Variables
NODE_ENV=development
PORT=3001
# Comma-separated origins for CORS
CORS_ORIGIN=http://localhost:8081,http://127.0.0.1:8081,http://localhost:5173
# Optional MongoDB. If not available, backend continues with Firestore only
MONGODB_URI=mongodb://localhost:27017/wellspring_hospital
# JWT secret (not used when verifying Firebase ID tokens)
JWT_SECRET=replace_me_for_production
